<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>

  <script>
      
    let progress = 0;
    const progressBar = document.getElementById("progressBar");

    // Kecepatan 2x lebih cepat (7.5 detik)
    const duration = 7500; 
    const interval = 150;   
    const step = 100 / (duration / interval);

    const timer = setInterval(() => {
      progress += step;
      if (progress >= 100) {
        progress = 100;
        clearInterval(timer);
        window.location.href = "https://diep.io/","_blank"; 
      }
      progressBar.style.width = progress + "%";
      progressBar.innerText = Math.floor(progress) + "%";  
    }, interval);

    // Bonus B: ganti ikon setiap kali bounce
    const emojiElement = document.getElementById("emoji");
    const icons = ["🚀", "🌙", "⭐", "☀️"]; // bisa pilih lebih banyak
    let i = 0;
    emojiElement.addEventListener("animationiteration", () => {
      i = (i + 1) % icons.length;
      emojiElement.textContent = icons[i];
    });
  </script>
